<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Gogol
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
						and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app-scss') }}
			{{ encore_entry_link_tags('index-scss') }}
			{{ encore_entry_link_tags('articles-scss') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app-js') }}
		{% endblock %}
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap" rel="stylesheet">
		<!-- JavaScript Bundle with Popper -->
		</head>
	<body>
		<div class="title-bar">
			<h1>{{menu.title.name}}</h1>
		</div>
		<div class="container">
		{% if menu.leftMenuTitle %}
					<div class="border-menu">
				<ul>
					{% for menuTitle in menu.leftMenuTitle %}
						<li>
							<div>
								<a href="{{path(menuTitle.route)}}">{{menuTitle.name}}</a>
								<i class="{{menuTitle.icon}}"></i>
							</div>
						</li>
					{% endfor %}
				</ul>
			</div>
		{% endif %}
			<div class="content-container">
				<div class="content-home">
					<div class="circle"></div>
					<div class="circle2"></div>
					{% block body %}{% endblock %}
				</div>
			</div>
		</div>
	</body>
</html>
